#!/usr/bin/env python

import arkpy

if __name__ == '__main__':
    import sys
    import optparse
    parser = optparse.OptionParser(usage="Usage: %prog [options]")
    parser.add_option('--authority', dest='authority',
                      help='Name Assigning Authority Number',
                      default='13030')
    parser.add_option('--template', dest='template',
                      help='''identifier template: e is an xdigit:
                      0123456789bcdfghjkmnpqrstvwxz; d is a digit:
                      0123456789; k is checkchar: special xdigit''',
                      default='eeddeeddk')
    parser.add_option('--prefix', dest='prefix',
                      help='Identifier prefix',
                      default='')
    parser.add_option('--bare', dest='bare',
                      action='store_true')
    (options, args) = parser.parse_args()
    if len(args) != 0:
        parser.print_help()
        sys.exit(1)

    print arkpy.mint(options.authority, options.template,
                     options.prefix, options.bare)
