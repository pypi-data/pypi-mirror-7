<?xml version='1.0'?>
<!DOCTYPE xs:schema PUBLIC "-//W3C//DTD XMLSCHEMA 200102//EN" "XMLSchema.dtd">

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="input">
    <xs:complexType>
      <xs:element name="title"   type="xs:string"   maxLength="20"/>
      <xs:element name="content" type="xs:string"   minLength="20"/>
      <xs:element name="author"  type="xs:token"    maxLength="40"/>
      <xs:element name="editor"  type="xs:token"    minOccurs="0"  match="editor"/>
      <xs:element name="created" type="xs:datetime" />
      <xs:element name="edited"  type="xs:datetime" maxOccurs="3" />
    </xs:complexType>
  </xs:element>

  <xs:complexType name="Name">
    <xs:element name="title"     type="xs:string" maxLength="40" maxOccurs="0"/>
    <xs:element name="firstName" type="xs:string" minLength="40" />
    <xs:element name="lastName"  type="xs:string" maxLength="40" />
    <xs:element name="Suffex"    type="xs:string" minLength="40" maxOccurs="0"/>
  </xs:complexType>

  <xs:complexType name="Address">
	<xs:or>
	    <xs:element name="HouseNumber" type="xs:string" maxLength="6"/>
		<xs:element name="HouseName"   type="xs:string" maxLength="40"/>
	</xs:or>
	<xs:element name="Street" type="xs:string" maxLength="80"/>
	<xs:or>
	    <xs:element name="Town" type="xs:string" maxLength="40"/>
		<xs:element name="City" type="xs:string" maxLength="40"/>
	</xs:or>
	<xs:element name="PostCode" type="xs:string" maxLength="40"/>
	<xs:element name="Country"  type="xs:string" maxLength="60"/>
  </xs:complexType>

</xs:schema>
