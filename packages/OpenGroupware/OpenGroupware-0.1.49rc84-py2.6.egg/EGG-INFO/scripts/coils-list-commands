# TODO: Implement

import os
from coils.core  import *

def main(argv):

    #initialize_COILS({'log_file': '{0}/coils.log'.format(os.getenv('HOME'))})
    initialize_tool('list-commands', argv)

    names = BundleManager.list_commands()
    names.sort()
    for name in names:
        classclass = BundleManager.get_command(name)
        print '{0}: {1}'.format(name, classclass)
    print 'Found {0} commands.'.format(len(names))


if __name__ == "__main__":
    main(sys.argv[1:])
