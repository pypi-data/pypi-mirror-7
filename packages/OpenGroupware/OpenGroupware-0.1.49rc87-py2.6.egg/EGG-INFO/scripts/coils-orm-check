import getopt, sys, os
from sqlalchemy       import *
from coils.foundation import *

def usage():
    print """
    Check the connection to the SQLAlchemy ORM (Database Configuration)
    """
    return

def main(argv):
    # Process command line arguements
    Backend.__alloc__(**{})
    try:
        db = Backend.db_session()
        query = db.query(Contact).filter(Contact.object_id==10000)
        result = query.all()
        if (len(result) == 1):
            print 'OK: ORM session established.'
            sys.exit(1)
    except Exception, e:
        print e
    sys.exit(1)


if __name__ == "__main__":
    main(sys.argv[1:])
