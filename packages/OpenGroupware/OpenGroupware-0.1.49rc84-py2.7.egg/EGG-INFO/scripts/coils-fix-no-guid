from coils.core  import *
import getopt, sys, os, uuid, random
from datetime import datetime

def generate_guid( context ):
    return '{0}-{1}-{2}@{3}'.format( uuid.uuid4( ),
                                     datetime.now( ).strftime( '%s' ),
                                     random.randint( 10000, 999999999 ),
                                     context.cluster_id[ 1:-1 ] )

def usage():
    print """
    --help      Display this helpful messages
    --execute   Execute the fix.
    --commit    Commit changes.
    """
    return

def main(argv):


    # Process command line arguements
    if (len(argv) == 0):
        usage()
        sys.exit(2)
    try:
        opts, args = getopt.getopt(argv,
                                   "hec",
                                  ["help", "execute", "commit"])
    except getopt.GetoptError, e:
        print(e)
        usage()
        sys.exit(2)

    enable_fix = False
    commit_changes = False
    for opt, arg in opts:
        if opt in ("-h", "--help"):
            usage()
            sys.exit(0)
        elif opt in ("-e", "--execute"):
            enable_fix = True
        elif opt in ("-c", "--commit"):
            commit_changes = True

    if not enable_fix:
        print('Execution of fix not requested, see the --execute option.')
        sys.exit(0)

    # Initialize COILs
    initialize_COILS({'log_file': '{0}/coils.log'.format(os.getenv('HOME'))})

    ctx = AdministrativeContext()
    db = ctx.db_session()
    counter = 0

    entity_list = ( Contact, Task, Appointment, )

    for entity in entity_list:
        query = db.query( entity ).filter( entity.uid == None )
        for obj in query.all():
            if not obj.version:
                obj.version = 1
            else:
                obj.version += 1
            obj.uid = generate_guid( ctx )
            counter += 1

    print( 'Initialized GUID on {0} entities.'.format( counter ) )

    if commit_changes:
        ctx.commit( )

    ctx.close( )

if __name__ == "__main__":
    main(sys.argv[1:])

