# TODO: Add usage information

from coils.core  import *
import getopt, sys, os

def usage():
    print """

    """
    return

def main(argv):

    try:
        ctx, params = initialize_tool('unschedule-pocess', argv, arguments=('u:', ['uuid=']))
    except getopt.GetoptError, e:
        print 'unable to initialize OpenGroupware Coils subsystem'
        print e
        sys.exit(2)

    uuid = params.get('--uuid', None)
    if (uuid is None):
        print 'No schedule UUID specified'
        sys.exit(4)

    if ctx.run_command('process::unschedule', uuid=uuid, raise_error=False):
        print('Schedule entry "{0}" removed'.format(uuid))
        sys.exit(0)
    else:
        print('Unable to remove schedule entry "{0}"'.format(uuid))
        sys.exit(1)

if __name__ == "__main__":
    main(sys.argv[1:])
