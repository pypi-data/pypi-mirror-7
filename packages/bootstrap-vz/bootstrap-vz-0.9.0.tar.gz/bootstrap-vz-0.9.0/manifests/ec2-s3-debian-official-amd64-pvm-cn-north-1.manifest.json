{
	"provider":       "ec2",
	"virtualization": "pvm",
	"credentials":    {
		// "access-key":  null,
		// "secret-key":  null,
		// "certificate": null,
		// "private-key": null,
		// "user-id":     null
	},

	"bootstrapper": {
		"workspace": "/target"
	},
	"image": {
		"name":        "debian-{system.release}-{system.architecture}-{virtualization}-{%Y}-{%m}-{%d}",
		"description": "Debian {system.release} {system.architecture} AMI",
		"bucket":      "debian-amis-cn-north-1",
		"region":      "cn-north-1"
	},
	"system": {
		"release":      "wheezy",
		"architecture": "amd64",
		"bootloader":   "pvgrub",
		"timezone":     "UTC",
		"locale":       "en_US",
		"charmap":      "UTF-8"
	},
	"packages": {
		"mirror": "http://ftp.cn.debian.org/debian"
	},
	"volume": {
		"backing": "s3",
		"partitions": {
			"type": "none",
			"root": {
				"size":       "4GiB",
				"filesystem": "ext4"
			}
		}
	},
	"plugins": {
		"cloud_init": {
			"username": "admin",
			"disable_modules": [ "landscape", "byobu", "ssh-import-id" ]
		}
	}
}
