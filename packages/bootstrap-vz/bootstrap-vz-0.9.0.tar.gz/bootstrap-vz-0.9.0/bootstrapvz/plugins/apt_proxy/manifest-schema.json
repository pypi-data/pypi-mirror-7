{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "APT proxy plugin manifest",
	"type": "object",
	"properties": {
		"plugins": {
			"type": "object",
			"properties": {
				"apt_proxy": {
					"type": "object",
					"properties": {
						"address": {
							"type": "string"
						},
						"persistent": {
							"type": "boolean"
						},
						"port": {
							"type": "integer"
						}
					},
					"required": ["address", "port"]
				}
			}
		}
	}
}
