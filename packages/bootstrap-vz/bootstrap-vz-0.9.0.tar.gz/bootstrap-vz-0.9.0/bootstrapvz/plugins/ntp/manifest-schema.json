{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "NTP plugin manifest",
	"type": "object",
	"properties": {
		"plugins": {
			"type": "object",
			"properties": {
				"ntp": {
					"type": "object",
					"properties": {
						"servers": {
							"type": "array",
							"items": {"type": "string"},
							"minItems": 1
						}
					}
				}
			}
		}
	}
}
