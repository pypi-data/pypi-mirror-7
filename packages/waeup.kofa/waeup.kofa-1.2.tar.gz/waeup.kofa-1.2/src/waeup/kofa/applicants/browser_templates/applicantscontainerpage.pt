<table class="form-table">
  <tbody>
    <tal:block repeat="widget view/widgets">
      <tal:condition condition="python:widget.name != 'form.description'">
      <tr>
        <td class="fieldname">
          <tal:block replace="python:widget.label"/>:
        </td>
        <td>
          <tal:block tal:replace="structure widget" />
        </td>
      </tr>
      </tal:condition>
    </tal:block>
  </tbody>
</table>

<span tal:condition="view/introduction" tal:omit-tag="">
  <p tal:content="structure view/introduction">INTRODUCTION</p>
</span>
