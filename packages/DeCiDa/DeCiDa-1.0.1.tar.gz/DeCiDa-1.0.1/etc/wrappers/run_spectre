#!/bin/bash
################################################################################
# NAME     : run_spectre
# PURPOSE  : spectre wrapper script
# AUTHOR   : Richard Booth
# DATE     : Sat Nov  9 11:11:32 2013
# -----------------------------------------------------------------------------
# NOTES    : 
#   * format option (-format): nutbin nutascii psfbin psfascii
################################################################################
ifile=$1 ofile=$2 rfile=$3 project=$4 
spectre=/tools/cds/bin/spectre
$spectre $ifile +log $ofile -raw $rfile -format nutbin $* > /dev/null
