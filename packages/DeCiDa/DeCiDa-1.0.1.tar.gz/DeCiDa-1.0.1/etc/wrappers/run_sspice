#!/bin/bash
################################################################################
# NAME     : run_sspice
# PURPOSE  : SmartSpice wrapper script
# AUTHOR   : Richard Booth
# DATE     : Thu Nov 21 20:03:14 2013
# -----------------------------------------------------------------------------
# NOTES    : 
################################################################################
ifile=$1 ofile=$2 rfile=$3
sspice=/tools/silvaco/bin/sspice
$sspice -sb $ifile -o $ofile -r $rfile $* > /dev/null
