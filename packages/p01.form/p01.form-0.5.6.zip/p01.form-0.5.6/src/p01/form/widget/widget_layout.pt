<div id="" class="group"
     tal:attributes="id string:${view/id}-row;
                     class python:view.getCSSClass()"
     tal:condition="python:view.mode != 'hidden'">
  <label tal:attributes="for view/id">
    <span tal:content="view/label"
          i18n:translate="">label</span>
    <span class="required"
          tal:condition="view/required">*</span>
  </label>
  <div class="widget" tal:content="structure view/render">widget</div>
  <div class="errors" tal:condition="view/error">
    <div class="error" tal:replace="structure view/error/render">error</div>
  </div>
</div>
