{% extends "base.jinja2" %}
{% set active_page = "me" %}

{% block jquery %}
	<script src="{{ url_for('static', filename='me.js') }}" type="text/javascript"></script>
	<script src="{{ url_for('static', filename='base/ticker.js') }}" type="text/javascript"></script>
{% endblock %}

{% block css %}
	<link href="{{ url_for('static', filename='me.css') }}" rel="stylesheet" type="text/css"/>	
{% endblock %}

{% block ticker %}{% endblock %}
{% block additionalTicker %}{% endblock %}

{% block content %}
<div id="span_me">
	<h4>Watchlist</h4>
	<div id="empty_watchlist"><h5>Watchlist is empty</h5></div>
	<table id="watchlist" class="table table-hover"> 
	  <thead>
	   <tr>
	     <th>CIK</th>
	   	 <th>Ticker</th>
	   	 <th>Name</th>
	   	 <th></th>
	   </tr>
	  </thead>
	  <tbody>
 	  	{% for row in session['watchlist'] %}
 	  	<tr>
 	  		<td class="cik">{{ row.cik }}</td>
 	  		<td>{{ row.ticker }}</td>
 	  		<td>{{ row.name }}</td>
 	  		<td class="delete">&times;</td>
 	  	</tr>
 	  	{% endfor %}
 	  </tbody>
	</table>
	
	<h4>Funds</h4>
  <div id="empty_funds"><h5>Funds list is empty</h5></div>
  <table id="funds_list" class="table table-hover"> 
    <thead>
     <tr>
       <th>CIK</th>
       <th>Name</th>
       <th></th>
     </tr>
    </thead>
    <tbody>
      {% for row in session['funds'] %}
      <tr>
        <td class="cik">{{ row.cik }}</td>
        <td>{{ row.name }}</td>
        <td class="delete">&times;</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
	
</div>
{% endblock %}
