#!/bin/bash
if [ -d .python ]; then
    echo "Activating python3 virtual environment"
    . .python/bin/activate
else
    echo "Setting up .python virtual environment"
    virtualenv .python -p python3 > /dev/null

    echo "Activating python3 virtual environment"
    . .python/bin/activate

    echo "Installing local package (everything in requirements.txt and devreq.txt)"
    pip install -e . -r devreq.txt

    echo "Done"
fi
