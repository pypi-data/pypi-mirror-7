<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="zopyx.existdb">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

      <h2 i18n:translate="">Directories</h2>
      <table class="listing">
          <thead>
              <tr>
                  <th i18n:translate="">Directory</th>
                  <th i18n:translate="">Last modified</th>
              </tr>
          </thead>
          <tbody>
              <tr>
                  <td>                                     
                      <a class="dir" tal:attributes="href python: u'@@view/{}'.format('/'.join(view.subpath[:-1]))">..</a>
                  </td>
                  <td />
              </tr>
              <tr tal:repeat="item options/dirs">
                  <td>
                      <a class="dir" tal:attributes="href item/url" tal:content="item/title" />
                  </td>
                  <td>
                      <span tal:replace="item/modified" />
                  </td>
              </tr>
          </tbody>
      </table>

      <h2 tal:condition="options/files" i18n:translate="">Files</h2>
      <table class="listing" tal:condition="options/files">
          <thead>
              <tr>
                  <th i18n:translate="">Filename</th>
                  <th i18n:translate="">Last modified</th>
                  <th i18n:translate="">Size</th>
                  <th i18n:translate="">Action</th>
              </tr>
          </thead>
          <tbody>
              <tr tal:repeat="item options/files">
                  <td>
                      <a class="file" tal:attributes="href item/url" tal:content="item/title" />
                  </td>
                  <td>
                      <span tal:replace="item/modified" />
                  </td>
                  <td>
                      <span tal:replace="item/size" />
                  </td>
                  <td>
                      <a tal:condition="item/editable"
                         tal:attributes="href item/edit_url"
                         i18n:attributes="title"
                         title="Edit"
                          >
                          <img src="++resource++zopyx.existdb/images/edit.png" />
                      </a>
                  </td>
              </tr>
          </tbody>
      </table>

      <div class="actions">
          <span i18n:translate="">Actions:</span>
          <ul>
              <li>
                  <a id="connector-zip-import" class="action" href="connector-zip-import" i18n:translate="">ZIP import</a>
              </li>
              <li>
                  <a id="connector-zip-export" class="action" href="connector-zip-export" i18n:translate="">ZIP export</a>
              </li>
              <li>
                  <a id="connector-reindex" class="action" href="connector-reindex" i18n:translate="">Reindex</a>
              </li>
              <li>
                  <a id="connector-log" class="action" href="connector-log" i18n:translate="">Log</a>
              </li>
              <li>
                  <a id="connector-log-clear" class="action" href="connector-log-clear" i18n:translate="">Clear log</a>
              </li>
          </ul>
      </div>

  </metal:content-core>
</metal:main>

</body>
</html>

