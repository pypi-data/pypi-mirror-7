<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="rer.giunta">
<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main" 
         tal:define="kssClassesView context/@@kss_field_decorator_view;
                     getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                     templateId template/getId;
					 selected_tab request/tab|nothing">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
	
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />
		
		<tal:biography condition="python:(selected_tab=='biography' or not selected_tab) and here.getBiography()">
	        <h2 i18n:translate="rer_giunta_biography">Biography</h2>
	        <span tal:replace="structure here/getBiography">Bio</span>
	    </tal:biography>
	    <tal:delegation condition="python:selected_tab=='delegation' and here.getDelegationsDescription()">
	        <h2 i18n:translate="rer_giunta_delegations">Delegations</h2>
	        <span tal:replace="structure here/getDelegationsDescription">Delegations</span>
	    </tal:delegation>		
        <div metal:use-macro="here/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>
        
        <span class="visualClear"><!-- --></span>

        <div tal:replace="structure provider:plone.belowcontentbody" />
		
    </tal:main-macro>
</div>

</body>
</html>
