<div i18n:domain="rer.giunta"
     id="assessoreHeaderViewlet"
     tal:define="assessore nocall:view/assessore">
	<h1 class="documentFirstHeading" tal:content="assessore/Title"> 
	    Title
	</h1>
	<div class="assessorePosition">
	  <span tal:content="assessore/getPosition"></span><span tal:condition="assessore/getDelegations"
	        tal:content="string: ${assessore/getDelegations}"></span>
	  
	</div>
	<div class="assessoreDetails">
	    <div class="assessoreImg"
	         tal:condition="assessore/getImageDetail">
	         <img tal:attributes="src string:${assessore/absolute_url}/imageDetail_mini;
								  alt assessore/Title" />
	    </div>
	    <div class="assessoreReferences"
	         tal:condition="assessore/getReferenceInfos">
	        <span tal:replace="structure assessore/getReferenceInfos"></span>
	    </div>
		<div class="visualClear"><!-- --></div>
	</div>
	<div class="assessoreInfos">
	    <ul id="assessoreTabs"
		    tal:define="selected view/getSelectedTab">
	        <li tal:condition="assessore/getBiography"
			    tal:attributes="class python:selected=='biography' and 'infoTab selectedTab' or 'infoTab'">
	            <a tal:attributes="href string:${assessore/absolute_url}?tab=biography">
	               <span i18n:translate="rer_giunta_biography">Biography</span>
	            </a>
	        </li>
	        <li tal:condition="assessore/getDelegationsDescription"
			    tal:attributes="class python:selected=='delegation' and 'infoTab selectedTab' or 'infoTab'">
	            <a tal:attributes="href string:${assessore/absolute_url}?tab=delegation">
	               <span i18n:translate="rer_giunta_delegations">Delegations</span>
	            </a>
	        </li>
			<tal:assessore_elements define="elements view/assessore_elements"
			                        condition="elements">
			    <tal:for repeat="element elements">
			        <li tal:attributes="class python:selected==element.getId and 'infoTab selectedTab' or 'infoTab'">
			            <a tal:attributes="href element/getURL">
			               <span tal:content="element/Title"></span>
			            </a>
			        </li>
				</tal:for>
            </tal:assessore_elements>
	    </ul>
	</div>
</div>