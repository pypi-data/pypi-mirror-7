<div class="form" tal:define="tags view/tags">
	<fieldset>
		<legend>EXIF tags</legend>
		<tal:loop repeat="exif python:sorted(tags.getExifTags().itervalues(), key=lambda x:x.label)">
			<tal:var content="exif/label" /> (<tal:var content="exif/key" /> - <tal:var content="exif/type" />): <tal:var content="exif/human_value" />
			<br />
		</tal:loop>
	</fieldset>
	<fieldset>
		<legend>IPTC tags</legend>
		<tal:loop repeat="iptc python:sorted(tags.getIptcTags().itervalues(), key=lambda x:x.key)">
			<tal:var content="iptc/title" /> (<tal:var content="iptc/key" />): <tal:var repeat="value iptc/raw_value" content="structure python:value.decode('latin1')" />
			<br />
		</tal:loop>
	</fieldset>
	<fieldset>
		<legend>XMP tags</legend>
		<tal:loop repeat="xmp python:sorted(tags.getXmpTags().itervalues(), key=lambda x:x.key)">
			<tal:var content="xmp/title" /> (<tal:var content="xmp/key" />): <tal:var content="xmp/raw_value" />
			<br />
		</tal:loop>
	</fieldset>
</div>