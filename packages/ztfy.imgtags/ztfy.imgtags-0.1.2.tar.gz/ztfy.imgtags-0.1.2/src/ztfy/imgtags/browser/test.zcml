<configure
	xmlns="http://namespaces.zope.org/zope"
	xmlns:browser="http://namespaces.zope.org/browser"
	xmlns:z3c="http://namespaces.zope.org/z3c"
	i18n_domain="ztfy.imgtags">

	<!-- Image tags test views -->
	<class class=".test.ImageTagsTest">
		<implements
			interface="zope.annotation.interfaces.IAttributeAnnotatable" />
		<require
			interface=".test.IImageTagsTest"
			set_schema=".test.IImageTagsTest"
			permission="zope.ManageSite" />
	</class>

	<z3c:pagelet
		name="addImageTagsTest.html"
		for="zope.site.interfaces.IFolder"
		class=".test.ImageTagsTestAddForm"
		layer="ztfy.zmi.layer.IZMILayer"
		permission="zope.ManageSite" />

	<browser:viewlet
		name=":: Add image tags test..."
		viewURL="@@addImageTagsTest.html"
		for="zope.site.interfaces.IFolder"
		manager="ztfy.skin.viewlets.contents.interfaces.IContentsViewletManager"
		class=".test.ImageTagsTestAddFormMenuItem"
		permission="zope.ManageSite"
		layer="ztfy.zmi.layer.IZMILayer"
		weight="31" />

	<z3c:pagelet
		name="properties.html"
		for=".test.IImageTagsTest"
		class=".test.ImageTagsTestEditForm"
		layer="ztfy.zmi.layer.IZMILayer"
		permission="zope.ManageSite" />

	<browser:viewlet
		name="Properties"
		viewURL="@@properties.html"
		for=".test.IImageTagsTest"
		manager="ztfy.skin.viewlets.actions.interfaces.IActionsViewletManager"
		class="ztfy.skin.menu.PropertiesMenuItem"
		permission="zope.ManageSite"
		layer="ztfy.zmi.layer.IZMILayer"
		weight="10" />

	<z3c:pagelet
		name="tags.html"
		for=".test.IImageTagsTest"
		class=".test.ImageTagsTestTagsDisplayForm"
		layer="ztfy.zmi.layer.IZMILayer"
		permission="zope.ManageSite" />

	<z3c:template
		for=".test.ImageTagsTestTagsDisplayForm"
		template="tags.pt"
		layer="ztfy.zmi.layer.IZMILayer" />

	<browser:viewlet
		name="EXIF/IPTC/XMP tags"
		viewURL="@@tags.html"
		for=".test.IImageTagsTest"
		manager="ztfy.skin.viewlets.actions.interfaces.IActionsViewletManager"
		class=".test.ImageTagsTestTagsDisplayFormMenuItem"
		permission="zope.ManageSite"
		layer="ztfy.zmi.layer.IZMILayer"
		weight="11" />

</configure>