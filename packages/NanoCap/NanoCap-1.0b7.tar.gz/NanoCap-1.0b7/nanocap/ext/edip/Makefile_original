GOAL = edip
INCL = common.f
FFLAGS = -O4

$(GOAL): $(OBJ) ; \
	$(FC) $(OBJ) $(FFLAGS) -o $(GOAL)

$(OBJ): $(INCL)

.f.o:; $(FC) $(FFLAGS) -c $<

clean:; rm *.o

square: square.o ; $(FC) $(FFLAGS) -o square square.f

cubic: cubic.o ; $(FC) $(FFLAGS) -o cubic cubic.f

