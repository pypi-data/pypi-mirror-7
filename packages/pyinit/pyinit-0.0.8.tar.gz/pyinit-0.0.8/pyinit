#!/usr/bin/env python
# coding: utf-8

import os
import sys
import os.path as path
import getpass
import textwrap


def setup(version='0.0.1', name='', description='', author=''):
	# setup file template
	setup_fmt = textwrap.dedent('''\
	from distutils.core import setup	
	
	setup(
		name='%(name)s',
		version='%(version)s',
		description='%(description)s',
		author='%(author)s',
		author_email='',
		url='',
		install_requires=[],
		py_modules=[],
		packages=[],
		scripts=[],
		keywords=[]
	)
	
	''')

	content = setup_fmt % {
		'name': name,
		'version': version,
		'description': description,
		'author': author,
		'py_modules': [],
		'scripts': []
	}

	with open('setup.py', 'w') as f:
		f.write(content)


if __name__ == '__main__':
	setup(name=path.basename(os.getcwd()), author=getpass.getuser())
