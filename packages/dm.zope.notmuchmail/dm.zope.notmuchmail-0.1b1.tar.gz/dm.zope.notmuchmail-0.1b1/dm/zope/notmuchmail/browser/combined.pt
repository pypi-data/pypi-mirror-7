<html metal:use-macro="here/@@email_search_threads/macros/page">
  <metal:form fill-slot="form-slot">
  <!-- Macro: "form"
	creates a formlib subform (work around Plone's 'subpageform'
	'form' macro forgetting the form creation
  -->
  <form metal:define-macro="form"
      action="."
      tal:attributes="action request/URL;
                      class string:kssattr-formname-${view/__name__}"
      method="post"
      enctype="multipart/form-data"
      id="zc.page.browser_form">
    <div metal:use-macro="view/form_template/macros/form" />
  </form>
  </metal:form>
</html>
