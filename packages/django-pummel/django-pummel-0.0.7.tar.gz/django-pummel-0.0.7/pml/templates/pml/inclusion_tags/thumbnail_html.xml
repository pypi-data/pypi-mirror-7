        <GALLERY>
            <ITEM>
                <IMAGE href="{{ image_url|urlencode }}" float="true" align="{{align}}" mime-type="image/jpeg" />
                {% text_tag html %}
            </ITEM>
        </GALLERY>
    </CONTAINER>
{% endblock %}
