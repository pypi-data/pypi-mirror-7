{% extends 'pml/base_module.xml' %}

{% block content %}
    <CONTAINER type="form">
        <FORM method="GET" href="" {% if form.submit_text %} submit_text="{{ form.submit_text }}"{% endif %}>
            <FIELD name="csrfmiddlewaretoken" value="{{ csrf_token }}" type="hidden"/>
            {% for field in form %}
                {{ field }}<br />
            {% endfor %}
        </FORM>
    </CONTAINER>
{% endblock %}
