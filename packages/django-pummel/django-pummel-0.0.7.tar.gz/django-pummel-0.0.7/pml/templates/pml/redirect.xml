{% extends 'pml/base.xml' %}
{% load pml_inclusion_tags %}

{% block header %}
    {% if messages %}
        {% redirect seconds=8 url=url %}
    {% else %}
        {% redirect seconds=2 url=url %}
    {% endif %}
{% endblock %}

{% block body %}
    <MODULE>
        <CONTAINER type="data">
            {% if messages %}
                {% for message in messages %}
                    {% text_tag html=message.message %}
                {% endfor %}
            {% else %}
                {% text_tag html="Thank you! You will be redirected shortly." %}
            {% endif %}
        </CONTAINER>
    </MODULE>
{% endblock %}
