{% if widget.label or widget.help_text or widget.error %}
    <TEXT>
        {% if widget.label %}<b>{{ widget.label }}</b><br />{% endif %}
        {% if widget.help_text %}{{ widget.help_text }}<br />{% endif %}
        {% if widget.error %}<color value="red">{{ widget.error }}</color>{% endif %}
    </TEXT>
{% endif %}

<FIELD name="{{ name }}" type="text" {% if value %}default="{{ value }}"{% endif %} {% for attr_name, attr_value in attrs.items %}{{ attr_name }}="{{ attr_value }}"{% endfor %} />
