{% if widget.label or widget.help_text %}
    <TEXT>
        {% if widget.label %}<b>{{ widget.label }}</b><br />{% endif %}
        {{ widget.help_text }}
    </TEXT>
{% endif %}
<SELECT name="{{ name }}" {% for attr_name, attr_value in attrs.items %}{{ attr_name }}="{{ attr_value }}"{% endfor %}>
    {% for choice in choices %}
    <ITEM value="{{ choice.0 }}" {% if choice.0 == value %}checked="true"{% endif %}>{{ choice.1 }}</ITEM>
    {% endfor %}
</SELECT>
