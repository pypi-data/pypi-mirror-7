{% block widget %}
    <CHOICE-GROUP name="{{ name }}" {% for attr_name, attr_value in attrs.items %}{{ attr_name }}="{{ attr_value }}"{% endfor %}>
    {% if widget.label or widget.help_text or widget.error %}
        <TEXT>
            {% if widget.label %}<b>{{ widget.label }}</b><br />{% endif %}
            {% if widget.help_text %}{{ widget.help_text }}<br />{% endif %}
            {% if widget.error %}<color value="red">{{ widget.error }}</color><br />{% endif %}
        </TEXT>
    {% endif %}
    {% for choice in choices %}
    <CHOICE value="{{ choice.0 }}" {% if value == choice.0 %}checked="true"{% endif %}>{{ choice.1 }}</CHOICE>
    {% endfor %}
    </CHOICE-GROUP>
{% endblock %}
