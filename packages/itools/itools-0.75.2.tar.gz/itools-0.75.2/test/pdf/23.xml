      <blockValign value="TOP" start="0,9" stop="0,9" />
      <blockValign value="MIDDLE" start="1,9" stop="2,9" />
      <blockValign value="BOTTOM_" start="3,9" stop="3,9" />
      
      <blockLeftPadding length="3cm" start="0,10" stop="0,10" />
      <blockTopPadding length="2cm" start="1,10" stop="1,10" />
      <blockBottomPadding length="0cm" start="2,10" stop="2,10" />
      <blockRightPadding length="2cm" start="3,10" stop="3,10" />

