<html xmlns="http://www.hforge.org/xml-namespaces/pml">
  <head>
    <style>
      p#first
      {
        color: #ffffff;
        background: red;
      }

      *.essai
      {
        color:#ff9000;
      }

      #my_body
      {
        margin: 10px;
        color:#ffff00;
      }
    </style>
  </head>
  <body id="my_body" class="body_class">
    <h1>first title : paragraph</h1>
    <!--<h1>first title : paragraph</h1>-->
    <p id="first">
      This paragraph
      contains a lot of lines
    </p>
    <!--<p>This paragraph contains a lot of lines</p>-->
    <p id="second">
      This paragraph
      contains      <a href="about:blank">a lot of spaces</a>
      in this xml source.
      <img src="itools_powered.png" />
    </p>
    <!--<p>This paragraph contains a lot of spaces in this xml source.</p>-->
    <p class="essai">
      toto<br />tata<br />
      titi
    </p>

    <!--<p>toto<br/>tata<br/>titi</p>-->
    <p>
      toto          <br />
      tata   <br />     titi
    </p>
    <!--<p>toto<br/>tata<br/>titi</p>-->
    <p><u><i>foo</i> </u></p>
    <!-- <p><u><i>foo</i> </u></p>-->
    <h2>first subtitle : formatting</h2>
    <!--<p><u><i>foo</i> </u></p>-->
