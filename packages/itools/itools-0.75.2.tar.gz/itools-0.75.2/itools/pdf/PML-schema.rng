</define>

<define name="title">
  <element name="pml:title">
    <text />
  </element>
</define>

<define name="link">
  <element name="pml:link">
    <attribute name="pml:rel"><data type="string"/></attribute>
    <attribute name="pml:href"><data type="anyURI"/></attribute>
    <attribute name="pml:type"><data type="string"/></attribute>
  </element>
</define>

