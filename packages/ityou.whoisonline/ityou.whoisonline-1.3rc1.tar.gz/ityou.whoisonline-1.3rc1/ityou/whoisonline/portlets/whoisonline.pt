<dl class="portlet portletWhoIsOnline"
    i18n:domain="ityou.whoisonline">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span i18n:translate="who_is_online">Who is online?</span>
        <span class="portletTopRight"></span>
    </dt>

    <div class="ajax-params invisible">
		<div id="WHOISONLINE_DELAY" tal:content="view/WHOISONLINE_DELAY"></div>
		<div id="ESI_ROOT" tal:content="view/ESI_ROOT"></div>
    </div>
    	
    <dd class="portletItem odd clearfix" id="who-is-online" >
        <ul></ul>
    	
    <!--  ================= JQ-TMPL ================= -->		
    <div id="no-tal" tal:replace='structure string:

        <script id="userprofile-tmpl" type="text/x-jquery-tmpl">
        
                    <!--  box -->
                    <div class="arrow-top" ></div>
                    <div class="who-is-online-box"  title="$${id}" >
                        <a href="$${profile}" title="$${fullname} ">                                                   
                            <img class="img-portrait" src="$${portrait}" />
                        </a>
                        <div class="bar-wrapper">
                            <span style="width: $${bar*75}px" class="bar"></span>
                        </div>
                            
                        <dl class="info-profile">
                            <dd>                    
                               <b><a class="fullname" href="$${profile}">$${fullname}</a></b>
                           </dd>
                           <dd>                               
                               <a href="mailto:$${email}">$${email}</a>
                           </dd>
                           <dd tal:condition="view/imessage_installed">
                               <a href="@@messages?sid=$${id}">-> Mitteilung versenden</a>
                           </dd>
                           <dd>Letzte Aktivität am <br /> $${recent_time}
                           </dd>
                        </dl>                                   

                    </div>
                    <!-- /box -->
        </script>
    '/>	
    <!--  ================= /JQ-TMPL ================= -->		

        <!-- via ajax -->    
        
        <script type="text/x-jsrender" id="whoisonline-tmpl">
            <li data-id="{{:id}}">
                <a class="portrait" href="{{:profile}}">
                    <img class="img-icon" src="{{:portrait}}">
                    
                    <div class="userprofile-box"></div>
                </a>
            </li>
        </script>
        
        <script type="text/x-jsrender" id="whoisonline-profile-tmpl">
            <div class="arrow-top"></div>
            <div class="who-is-online-box" title="{{:id}}">
                <a href="{{:profile}}" title="{{:fullname}}">
                    <img class="img-portrait" src="{{:portrait_large}}">
                </a>
                
                <div class="bar-wrapper">
                    <span style="width: {{:bar*100}}%" class="bar"></span>
                </div>
                
                <dl class="info-profile">
                    <dd>
                        <a class="fullname" href="{{:profile}}"><strong>{{:fullname}}</strong></a>
                    </dd>
                    <dd>
                        <a href="mailto:{{:email}}">{{:email}}</a>
                    </dd>
                    <dd tal:condition="view/imessage_installed">
                        <a href="@@messages?sid={{:id}}">-> Mitteilung versenden</a>
                    </dd>
                    <dd>
                        Letzte Aktivität am <br> {{:recent_time}}
                    </dd>
                </dl>
            </div>
        </script>
        
        
        
        
    </dd>
</dl>
