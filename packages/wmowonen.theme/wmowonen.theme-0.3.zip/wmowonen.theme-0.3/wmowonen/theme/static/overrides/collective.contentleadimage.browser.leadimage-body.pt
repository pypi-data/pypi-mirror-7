<div class="newsImageContainer" i18n:domain="collective.contentleadimage"
        tal:define="tag python: view.bodyTag(css_class='container_head')"
        tal:condition="tag">

    <div id="formatted-date"
        tal:define="
          startdate here/startDate | nothing;
          months python: ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun',
                          'Jul', 'Aug', 'Sep', 'Okt', 'Nov', 'Dec']"
        tal:condition="startdate">
      <div class="month"
          tal:content="python: months[int(startdate.strftime('%m')) - 1]"
          >Aug</div>
      <div class="day"
          tal:content="startdate/day">24</div>
    </div>

    <div class="imageLink">
    <a href="#"
       tal:define="here_url context/@@plone_context_state/object_url;"
       id="parent-fieldname-leadImage">
        <img tal:replace="structure tag" src="" alt=""/>
    </a>

    <metal:defineAddthis metal:define-macro="addthis">
      <span class="addthis_toolbox addthis_default_style"
          tal:define="item_url context/absolute_url"
          tal:attributes="
            addthis:url python:(context.portal_type == 'File'
              or context.portal_type == 'Image') and item_url + '/view' or item_url;
            addthis:title context/Title;
            addthis:description context/Description">
        <span class="wrapper">
        <a class="addthis_button_email addthisButton">
        </a>
        <a class="addthis_button_linkedin addthisButton">
        </a>
        <a class="addthis_button_twitter addthisButton">
        </a>
        </span>
      </span>
    </metal:defineAddthis>

    </div>

    <p class="discreet">
        <metal:field use-macro="view/caption">
            Image Caption
        </metal:field>
    </p>

</div>

<div class="newsImageContainer"
     tal:condition="context/getImage|nothing">
    <div class="imageLink">
    <a href="#"
       tal:define="here_url context/@@plone_context_state/object_url;"
       id="parent-fieldname-image">
       <img tal:replace="structure python: context.tag(scale='container_head', css_class='newsImage')" src="" alt=""/>
    </a>
       <metal:useAddthis metal:use-macro="template/macros/addthis" />
    </div>

    <p class="discreet" tal:condition="context/imageCaption|nothing">
        <metal:field use-macro="python:context.widget('imageCaption', mode='view')">
            Image Caption
        </metal:field>
    </p>


</div>

<script type="text/javascript">
    var addthis_config = {"data_track_clickback":true};
    var addthis_share = {templates: { twitter: '{{title}}: {{url}}' }}
</script>
<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=intk"></script>
