<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
  <action-provider name="portal_actions">

    <action title="Page Turner Settings" action_id="pageturner_settings" category="object"
        condition_expr="object/@@pageturner-utils/enabled"
        url_expr="string:${object_url}/@@page-turner-settings" visible="True">
        <permission>Modify view template</permission>
    </action>

    <action title="Flexpaper Convert" action_id="pageturner_toflexpaper" category="object"
        condition_expr="object/@@pageturner-utils/enabled"
        url_expr="string:${object_url}/@@convert-to-flexpaper" visible="True">
        <permission>Modify view template</permission>
    </action>

  </action-provider>
</object>