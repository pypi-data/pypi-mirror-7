{
    "cluster" : {
        "name" : "testing"
    },
    "network" : {
        "host" : "localhost"
    },
    "http" : {
        "port" : "45200-45300"
    },
    "transport" : {
        "tcp" : {
            "port": "45300-45400"
        }
    },
    "thrift" : {
        "port" : "45500-45600"
    },
    "index": {
        "store" : {
            "type": "fs"
        },
        "mapper": {
            "dynamic": "false"
        },
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "analysis" : {
            "default": "textAnalyzer",
            "analyzer": {
                "textAnalyzer": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["standard", "lowercase", "stopFilter", "asciifolding", "porterStem"]
                },
                "nGramAnalyzer" : {
                    "type" : "custom",
                    "tokenizer" : "standard",
                    "filter" : ["standard", "lowercase", "nGramFilter"]
                },
                "de": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["standard", "lowercase", "deStopFilter", "asciifolding", "deStemmer"]
                },
                "en": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["standard", "lowercase", "enStopFilter", "enStemmer"]
                },
                "fr": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["standard", "elision", "lowercase", "frStopFilter", "asciifolding", "frStemmer"]
                },
                "it": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": ["standard", "lowercase", "itStopFilter", "asciifolding", "itStemmer"]
                }
            },
            "filter" : {
                "nGramFilter" : {
                    "type" : "nGram",
                    "min_gram" : 2,
                    "max_gram" : 50
                },
                "stopFilter" : {
                    "type" : "stop",
                    "stopwords" : ["_english_", "_french_", "_german_"]
                },
                "deStopFilter" : {
                    "type" : "stop",
                    "stopwords" : ["_german_"]
                },
                "enStopFilter" : {
                    "type" : "stop",
                    "stopwords" : ["_english_"]
                },
                "frStopFilter" : {
                    "type" : "stop",
                    "stopwords" : ["_french_"]
                },
                "itStopFilter" : {
                    "type" : "stop",
                    "stopwords" : ["_italian_"]
                },
                "deStemmer" : {
                    "type" : "snowball",
                    "language" : "German2"
                },
                "enStemmer" : {
                    "type" : "snowball",
                    "language" : "English"
                },
                "frStemmer" : {
                    "type" : "snowball",
                    "language" : "French"
                },
                "itStemmer" : {
                    "type" : "snowball",
                    "language" : "Italian"
                },
                "elision" : {
                    "type" : "elision",
                    "articles" : ["l", "m", "t", "qu", "n", "s", "j"]
                }
            }
        }
    }
}
