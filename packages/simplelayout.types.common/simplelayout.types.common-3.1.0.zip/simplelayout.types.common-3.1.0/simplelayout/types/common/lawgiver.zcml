<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:lawgiver="http://namespaces.zope.org/lawgiver"
    i18n_domain="ftw.blog">

    <include package="ftw.lawgiver" file="meta.zcml" />

    <lawgiver:map_permissions
        action_group="add"
        permissions="simplelayout.types.common: Add Page"
        />

    <lawgiver:map_permissions
        action_group="edit"
        permissions="simplelayout.types.common: Add Paragraph"
        />

</configure>
