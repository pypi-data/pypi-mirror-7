<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="seantis.reservation"
>

<body>
<metal:main fill-slot="main">
<tal:main-macro metal:define-macro="main">

<div class="your-reservations-view" tal:define="reservations view/reservation_data">
    <h1 i18n:translate="">Your reservations</h1>
    
    <div class="field error" tal:condition="python: not reservations and not view.widgets.errors">
      <div class="error" i18n:translate="">No reservations to confirm.</div>
    </div>

    <tal:block condition="reservations">
      <ul>
        <li tal:repeat="reservation reservations">
          <div class="limitedList">
            <span tal:content="structure reservation/title"></span><br/>
            <span tal:content="structure reservation/time"></span>
            <span class="your-reservation-quota" tal:condition="reservation/quota" tal:content="structure reservation/quota"></span>
          </div>
        </li>
      </ul>
    </tal:block>
    

    <metal:block use-macro="context/@@ploneform-macros/titlelessform" />
</div>

</tal:main-macro>
</metal:main>
</body>
</html>