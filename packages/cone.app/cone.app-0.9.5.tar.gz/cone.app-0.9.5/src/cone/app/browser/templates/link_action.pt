<tal:link xmlns:tal="http://xml.zope.org/namespaces/tal"
          xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
          omit-tag="True">
  
  <a tal:condition="context.text"
     id="${context.id|nothing}"
     href="${context.href|nothing}"
     class="${context.css_class|nothing}"
     title="${context.title|nothing}"
     ajax:bind="${context.bind|nothing}"
     ajax:target="${context.target|nothing}"
     ajax:event="${context.event|nothing}"
     ajax:action="${context.action|nothing}"
     ajax:confirm="${context.confirm|nothing}"
     ajax:overlay="${context.overlay|nothing}"
     tal:content="context.text">Text</a>
  
  <a tal:condition="not context.text"
     id="${context.id|nothing}"
     href="${context.href|nothing}"
     class="${context.css_class|nothing}"
     title="${context.title|nothing}"
     ajax:bind="${context.bind|nothing}"
     ajax:target="${context.target|nothing}"
     ajax:event="${context.event|nothing}"
     ajax:action="${context.action|nothing}"
     ajax:confirm="${context.confirm|nothing}"
     ajax:overlay="${context.overlay|nothing}">&nbsp;</a>

</tal:link>