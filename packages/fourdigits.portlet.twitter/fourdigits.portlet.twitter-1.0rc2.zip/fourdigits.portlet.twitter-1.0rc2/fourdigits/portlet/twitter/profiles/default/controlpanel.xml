<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone"
    purge="False">

    <configlet
        title="Twitter Portlet Settings"
        action_id="fourdigits_portlet_twitter_settings"
        appId="fourdigits.portlet.twitter"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@fourdigits-portlet-twitter-settings"
        icon_expr="string:${portal_url}/++resource++fourdigits.portlet.twitter.stylesheets/icon.gif"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
