.g-item-header
  border-bottom 1px solid #ddd
  margin-bottom 15px
  font-size 16px
  color #555

.g-item-edit-button
  margin-bottom 2px
  display inline
  font-size 14px
  float right

.g-item-files, .g-item-metadata
  margin-top 20px

.g-item-files-header, .g-item-metadata-header, .g-item-info-header
  background-color #f0f0f0
  padding 5px 6px
  color #555
  font-size 16px
  font-weight bold

.g-info-list-entry
  margin 3px
  margin-top 5px
  background-color #fbfbfb

.g-item-metadata-row
  margin 3px
  margin-top 5px
  border-bottom 1px solid #f0f0f0
  height 25px
  font-size 14px
  color #777

.editing
  background-color #C6DEFF

.g-item-metadata-key, g-item-metadata-value
  padding 5px

.g-item-metadata-key
  font-weight bold
  width 150px

.g-item-metadata-add-button
  float right
  margin-right 10px
  padding 2px 3px
  margin-top 3px

.g-item-metadata-edit-button
  margin-right 14px
  margin-top -3px
  float right
  display inline-block
  height 25px
  font-size 12px
  padding 3px

.g-item-metadata-cancel-button, .g-item-metadata-save-button, .g-item-metadata-delete-button
  margin-right 4px
  margin-top 1px
  display inline-block
  height 23px
  font-size 12px
  padding 2px

.g-item-metadata-key-input, .g-item-metadata-value-input
  width 200px
  height 22px
  margin-left 5px
  margin-right 5px
  display inline-block

.g-file-list
  list-style-type none
  padding-left 0
  margin-bottom 0

  >li
    padding 3px 5px
    border-bottom 1px solid #f2f2f2

    .g-file-name
      margin-right 5px

.g-item-breadcrumb-container
  margin-bottom 10px

  ol.breadcrumb
    margin-bottom 0
    background-color #eaebea
    border-radius 0
    padding-left 5px
    padding-right 5px

  .g-hierarchy-level-up
    border 1px solid #d5d5d5
    border-radius 3px
    padding 2px 3px

    &:hover
      border 1px solid #aaa
      background-color #dadada
