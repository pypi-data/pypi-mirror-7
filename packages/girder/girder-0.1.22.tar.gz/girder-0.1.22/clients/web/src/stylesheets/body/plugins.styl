.g-plugin-list-container
  border 1px solid #e2e2e2
  border-radius 3px
  margin-top 10px

  .g-plugin-list-item
    padding 10px
    border-bottom 1px solid #e2e2e2

    .g-plugin-name
      font-weight bold
      font-size 16px
      color #666

    a.g-plugin-config-link
      margin-left 7px

    .g-plugin-description
      margin-top 7px
      color #999

    &:last-child
      border-bottom none

  .bootstrap-switch
    float right

.g-plugin-config-breadcrumbs > ol.breadcrumb
  padding 6px 10px
  border-radius 3px
  background-color #f1f1f1
  border 1px solid #e0e0e0
  margin-bottom 15px

  > li.active
    color #555
