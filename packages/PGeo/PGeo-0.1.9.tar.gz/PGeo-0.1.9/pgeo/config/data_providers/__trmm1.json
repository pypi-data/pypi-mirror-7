{
    "version": "1.0",
    "source": {
        "type": "FTP",
        "ftp": {
            "base_url": "trmmopen.gsfc.nasa.gov",
            "data_dir": "/pub/gis/"
        }
    },
    "target": {
        "target_dir": "/home/kalimaha/Development/GIS/TRMM/",
        "filesystem": {
            "folder_name": "{product}",
            "sub_folders": [
                {
                    "folder_name": "{year}",
                    "sub_folders": [
                        {
                            "folder_name": "{month}",
                            "sub_folders": [
                                {
                                    "folder_name": "{day}",
                                    "sub_folders": [
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    },
    "bands": {
        "0": "NDVI",
        "1": "EVI"
    },
    "subfolders": {
        "original": "original",
        "output": "output",
        "tmp": "tmp"
    },
    "analysis": {
        "create_avg": true,
        "create_da": true,
        "stats": {
            "enable": true,
            "scripts": [
                {
                    "file": "sadc.json",
                    "description": {
                        "en": "SADC"
                    }
                }
            ]
        }
    },
    "services_base_url": "http://127.0.0.1:5005/browse/",
    "services": {
        "filters": [
            {
                "id": "list_years_from",
                "path": "trmm1",
                "parameters": [],
                "payload": {
                    "fields": ["code", "label"],
                    "id": "code",
                    "label": "label"
                },
                "description": {
                    "en": "Available Years - From",
                    "it": "Anni Disponibili - Da",
                    "pt": "Anos Disponíveis"
                },
                "selection_type": "single",
                "services": [
                    {
                        "id": "list_months_from",
                        "path": "trmm/{year}",
                        "parameters": [
                            {
                                "parameter_name": "year",
                                "parameter_value": "list_years_from"
                            }
                        ],
                        "payload": {
                            "fields": ["code", "label"],
                            "id": "code",
                            "label": "label"
                        },
                        "description": {
                            "en": "Available Months - From",
                            "it": "Mesi Disponibili - Da",
                            "pt": "Meses Disponíveis - Desde"
                        },
                        "selection_type": "single"
                    }
                ]
            }
        ]
    }
}