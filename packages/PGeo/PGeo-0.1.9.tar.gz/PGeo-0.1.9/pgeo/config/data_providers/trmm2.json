{
    "version": "1.0",
    "source": {
        "type": "FTP",
        "ftp": {
            "base_url": "trmmopen.gsfc.nasa.gov",
            "data_dir": "/trmmdata/GIS/"
        }
    },
    "target": {
        "target_dir": "/home/kalimaha/Desktop/TRMM",
        "folders": [
            {
                "folder_name": "{{year}}",
                "folders": [
                    {
                        "folder_name": "{{month}}",
                        "folders": [
                            {
                                "folder_name": "{{day}}"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "bands": {

    },
    "subfolders": {
        "original": "original",
        "output": "output",
        "tmp": "tmp"
    },
    "analysis": {
        "create_avg": true,
        "create_da": true,
        "stats": {
            "enable": true,
            "scripts": [
                {
                    "file": "sadc.json",
                    "description": {
                        "en": "SADC"
                    }
                }
            ]
        }
    },
    "services_base_url": "http://127.0.0.1:5005/browse/",
    "services": {
        "layers": {
            "id": "list_layers",
            "path": "trmm2/{year}/{month}/{from_day}/{to_day}",
            "parameters": [
                {
                    "parameter_name": "year",
                    "parameter_value": "list_years"
                },
                {
                    "parameter_name": "month",
                    "parameter_value": "list_months"
                },
                {
                    "parameter_name": "from_day",
                    "parameter_value": "list_days_from"
                },
                {
                    "parameter_name": "to_day",
                    "parameter_value": "list_days_to"
                }
            ],
            "payload": {
                "fields": ["code", "label", "size"],
                "id": "code",
                "label": "label"
            },
            "description": {
                "en": "Available Layers",
                "it": "Layers Disponibili",
                "pt": "Layers Disponíveis"
            },
            "selection_type": "multiple"
        },
        "filters": [
            {
                "id": "list_years",
                "path": "trmm2",
                "parameters": [],
                "payload": {
                    "fields": ["code", "label"],
                    "id": "code",
                    "label": "label"
                },
                "description": {
                    "en": "Available Years",
                    "it": "Anni Disponibili",
                    "pt": "Anos Disponíveis"
                },
                "selection_type": "single",
                "services": [
                    {
                        "id": "list_months",
                        "path": "trmm2/{year}",
                        "parameters": [
                            {
                                "parameter_name": "year",
                                "parameter_value": "list_years"
                            }
                        ],
                        "payload": {
                            "fields": ["code", "label"],
                            "id": "code",
                            "label": "label"
                        },
                        "description": {
                            "en": "Available Months",
                            "it": "Mesi Disponibili",
                            "pt": "Meses Disponíveis"
                        },
                        "selection_type": "single",
                        "services": [
                            {
                                "id": "list_days_from",
                                "path": "trmm2/{year}/{month}",
                                "parameters": [
                                    {
                                        "parameter_name": "year",
                                        "parameter_value": "list_years"
                                    },
                                    {
                                        "parameter_name": "month",
                                        "parameter_value": "list_months"
                                    }
                                ],
                                "payload": {
                                    "fields": ["code", "label"],
                                    "id": "code",
                                    "label": "label"
                                },
                                "description": {
                                    "en": "Available Days - From",
                                    "it": "Giorni Disponibili - Da",
                                    "pt": "Dias Disponíveis - Desde"
                                },
                                "selection_type": "single"
                            },
                            {
                                "id": "list_days_to",
                                "path": "trmm2/{year}/{month}",
                                "parameters": [
                                    {
                                        "parameter_name": "year",
                                        "parameter_value": "list_years"
                                    },
                                    {
                                        "parameter_name": "month",
                                        "parameter_value": "list_months"
                                    }
                                ],
                                "payload": {
                                    "fields": ["code", "label"],
                                    "id": "code",
                                    "label": "label"
                                },
                                "description": {
                                    "en": "Available Days - To",
                                    "it": "Giorni Disponibili - A",
                                    "pt": "Dias Disponíveis - Até"
                                },
                                "selection_type": "single"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}