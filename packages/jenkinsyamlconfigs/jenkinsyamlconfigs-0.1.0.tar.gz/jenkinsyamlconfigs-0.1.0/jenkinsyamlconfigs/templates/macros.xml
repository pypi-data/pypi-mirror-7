{% macro start_conditional(node_name, class_name, in_conditional) %}
{% if in_conditional %}
<{{ node_name }} class="{{ class_name }}">
{% else %}
<{{ class_name }}>
{% endif %}
{% endmacro %}

{% macro end_conditional(node_name, class_name, in_conditional) %}
{% if in_conditional %}
</{{node_name}}>
{% else %}
</{{class_name}}>
{% endif %}
{% endmacro %}