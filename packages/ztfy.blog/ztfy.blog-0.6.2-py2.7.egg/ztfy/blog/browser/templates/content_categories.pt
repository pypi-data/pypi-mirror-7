<div class="form" i18n:domain="ztfy.blog">
	<fieldset>
		<legend tal:condition="view/legend | nothing" tal:content="view/legend" i18n:translate="" />
		<form action="@@categories.html" method="POST">
			<tal:var content="structure view/renderTable" />
			<div tal:condition="view/rows">
				<div class="buttons">
					<input type="button" name="form.buttons.submit" class="button-widget button-field" value="Submit"
						   onclick="$.ZTFY.form.update(this.form);" i18n:attributes="value" />
					<input type="button" name="form.buttons.reset" class="button-widget jsbutton-field" value="Reset"
						   onclick="$.ZTFY.form.reset(this.form);" i18n:attributes="value" />
				</div>
			</div>
			<div tal:condition="not:view/rows">
				<div class="help" i18n:translate="">No category available to handle this content.</div>
			</div>
		</form>
	</fieldset>
</div>