<configure
	xmlns="http://namespaces.zope.org/browser"
	xmlns:z3c="http://namespaces.zope.org/z3c"
	xmlns:zope="http://namespaces.zope.org/zope"
	i18n_domain="ztfy.blog">

	<z3c:pagelet
		name="contents.html"
		for="..interfaces.paragraph.IParagraphContainer"
		class=".paragraph.ParagraphContainerContentsView"
		layer="ztfy.skin.layer.IZTFYBrowserLayer"
		permission="ztfy.ViewManagementScreens" />

	<viewlet
		name="Contents"
		viewURL="@@contents.html"
		for="..interfaces.paragraph.IParagraphContainer"
		manager="ztfy.skin.viewlets.contents.interfaces.IContentsViewletManager"
		class=".paragraph.ParagraphContainerContentsViewMenu"
		permission="ztfy.ViewManagementScreens"
		layer="ztfy.skin.layer.IZTFYBackLayer"
		weight="25" />

	<zope:adapter
		factory=".paragraph.ParagraphDefaultViewAdapter" />

	<zope:adapter
		factory=".paragraph.ParagraphContainerTableViewCellActions" />

</configure>