<tal:if condition="context/commentable">
	<div class="comments" tal:define="presentation context/site:presentation;
									  site_id python:getattr(presentation,'disqus_site_id',None);"
						  tal:condition="site_id" i18n:domain="ztfy.blog">
		<div id="disqus_thread"></div>
		<script type="text/javascript" tal:content="structure string:
			// <![CDATA[
			var disqus_identifier = '${site_id}-${view/oid}';
			(function() {
				var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
				dsq.src = 'http://${site_id}.disqus.com/embed.js';
				(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
			})();
			// ]]>
		"></script>
		<noscript i18n:translate="">Please enable JavaScript to view the comments powered by <a tal:attributes="href string:http://disqus.com/?ref_noscript=${site_id}" i18n:name="disqus">Disqus.</a></noscript>
		<a href="http://disqus.com" class="dsq-brlink" i18n:translate="">Comments powered by <span class="logo-disqus" i18n:name="disqus">Disqus</span></a>
	</div>
</tal:if>