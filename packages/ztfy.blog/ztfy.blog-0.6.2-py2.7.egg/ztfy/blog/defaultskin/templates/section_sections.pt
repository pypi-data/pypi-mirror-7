<ul class="sub_sections"
	tal:define="sections view/sections;
				global subsections python:None;
				global subselected python:[];"
	tal:condition="sections">
	<tal:loop repeat="item sections">
		<li tal:define="section item/section;"
			tal:attributes="class python:item['selected'] and 'selected' or None;">
			<tal:if condition="item/subsections">
				<tal:var define="global subsections item/subsections;
								 global subselected item/subselected;" />
			</tal:if>
			<a tal:attributes="href section/@@absolute_url"
			   tal:content="section/i18n:shortname" />
		</li>
	</tal:loop>
</ul>
<ul class="sub_sections2"
	tal:condition="subsections">
	<tal:loop repeat="section subsections">
		<li tal:attributes="class python:section in subselected and 'selected' or None;">
			<a tal:attributes="href section/@@absolute_url"
			   tal:content="section/i18n:shortname" />
		</li>
	</tal:loop>
</ul>