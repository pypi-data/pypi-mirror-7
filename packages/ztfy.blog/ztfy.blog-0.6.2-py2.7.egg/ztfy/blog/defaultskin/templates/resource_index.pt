<tal:x i18n:domain="ztfy.blog">
	<a tal:attributes="href context/@@absolute_url"
	   tal:content="view/title" />
	&nbsp;(<span tal:content="context/content/contentType" /> - <span i18n:translate=""><tal:var replace="python:context.content.getSize() / 1024" i18n:name="size" /> Kb</span>)
	<img class="flag" tal:define="language view/language" tal:condition="language"
		 tal:attributes="src string:/--static--/ztfy.i18n/img/flags/${view/flag}.png;
						 alt language;" />
	<p tal:define="description context/i18n:description" tal:condition="description"
	   tal:content="structure description/html:text" />
</tal:x>