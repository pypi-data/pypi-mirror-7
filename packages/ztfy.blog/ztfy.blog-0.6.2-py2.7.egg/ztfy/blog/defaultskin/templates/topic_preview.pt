<h2><a tal:attributes="href context/@@absolute_url" tal:content="context/i18n:title" /></h2>
<div i18n:domain="ztfy.blog">
	<tal:if define="illustration context/i18n:illustration"
			 condition="illustration">
		<img tal:define="display illustration/++display++cthumb/++display++w64"
			 tal:attributes="src display/@@absolute_url;
							 alt context/i18n:illustration_title;"
			 class="illustration toleft" />
	</tal:if>
	<div class="body" tal:define="presentation view/presentation;
								  heading context/i18n:heading;
								  renderer heading/html:renderer;"
					  tal:content="structure python:renderer.render(presentation.header_format,request)" />
	<div class="clearer"><!-- IE bugfix --></div>
	<div class="footer">
		<tal:var replace="structure context/@@tags" />
		<div class="publication">
			<span class="label" i18n:translate="">By </span> <span class="author" tal:content="view/author/title" /> ~ 
			<span class="date" tal:define="date view/date;
										   formatter request/locale/dates;" i18n:translate="">on <tal:var content="python:formatter.getFormatter('date','long').format(date)" i18n:name="date" /> - <tal:var content="python:formatter.getFormatter('time','short').format(date)" i18n:name="time" /></span>
		</div>
	</div>
</div>