<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0"
	 xmlns:tal="http://xml.zope.org/namespaces/tal">
	<channel>
		<title tal:content="context/i18n:title" />
		<description tal:content="context/i18n:description" />
		<link tal:content="context/@@absolute_url" />
		<tal:loop repeat="topic view/topics">
			<item>
				<title tal:content="topic/i18n:title" />
				<description tal:content="topic/i18n:description" />
				<link tal:content="topic/@@absolute_url" />
			</item>
		</tal:loop>
	</channel>
</rss>