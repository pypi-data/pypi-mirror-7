<div class="para">
	<div class="centered" tal:omit-tag="python:context.position != 2">
		<a tal:omit-tag="not:context/zoomable"
		   tal:define="heading context/i18n:heading;"
		   tal:attributes="href python:view.zoom_target;
						   title context/i18n:title;
						   data-ztfy-widget python:'fancybox' if context.zoomable else None;
						   data-fancybox-description heading/html:text;"
		   class="zoom" rel="external"
		   data-fancybox-overlay-opacity="0.6"
		   data-fancybox-padding="0"
		   data-fancybox-margin="0"
		   data-fancybox-parent="A"
		   data-fancybox-title-position="over">
			<img tal:attributes="class view/css_class;
								 src view/img_src;
								 alt context/i18n:title;" />
		</a>
	</div>
	<div class="clearer" tal:condition="context/break_after"><!-- IE bugfix --></div>
</div>