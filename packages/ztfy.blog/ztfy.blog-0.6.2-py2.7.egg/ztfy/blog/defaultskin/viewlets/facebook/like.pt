<tal:var define="presentation context/site:presentation;
				 app_id python:getattr(presentation,'facebook_app_id',None);"
		 condition="app_id">
	<div id="fb-root"></div>
	<script tal:define="manager context/site:manager" tal:content="string:
		(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = '//connect.facebook.net/fr_FR/all.js#xfbml=1&appId=${app_id}';
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
	"></script>
</tal:var>