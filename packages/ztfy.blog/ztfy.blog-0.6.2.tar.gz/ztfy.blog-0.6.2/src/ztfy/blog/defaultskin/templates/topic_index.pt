<tal:var content="structure context/@@sections" />
<tal:var define="presentation view/presentation" i18n:domain="ztfy.blog">
	<div class="social">
		<div class="fblike" tal:condition="presentation/display_fb_like">
			<fb:like send="true" layout="button_count" width="200" show_faces="true"></fb:like>
		</div>
		<div tal:condition="presentation/display_googleplus" class="plusone">
			<div class="g-plusone" data-size="medium"></div>
		</div>
	</div>
	<h1 tal:content="context/i18n:title" />
	<div class="topic">
		<div class="body">
			<tal:if define="illustration context/i18n:illustration"
					condition="illustration">
				<tal:if condition="python:presentation.illustration_position == 1">
					<img tal:define="display illustration/++display++w128"
						 tal:attributes="src display/@@absolute_url;
										 alt context/i18n:illustration_title;"
						 class="illustration toleft" />
				</tal:if>
				<tal:if condition="python:presentation.illustration_position == 2">
					<img tal:define="display illustration/++display++w128"
						 tal:attributes="src display/@@absolute_url;
										 alt context/i18n:illustration_title;"
						 class="illustration toright" />
				</tal:if>
				<div tal:condition="python:presentation.illustration_position == 3" class="centered">
					<img tal:define="display illustration/++display++w800"
						 tal:attributes="src display/@@absolute_url;
										 alt context/i18n:illustration_title;"
						 class="illustration centered" />
				</div>
			</tal:if>
			<tal:loop repeat="paragraph view/renderers">
				<tal:var content="structure paragraph/render" />
			</tal:loop>
		</div>
		<div class="clearer"><!-- IE bugfix --></div>
		<tal:var replace="structure context/@@resources" />
		<tal:var replace="structure context/@@links" />
		<div class="footer">
			<tal:var replace="structure context/@@tags" />
			<div class="publication">
				<span class="label" i18n:translate="">By </span> <span class="author" tal:content="view/author/title" /> ~ 
				<span class="date" tal:define="date view/date;
											   formatter request/locale/dates;"
								   tal:condition="date" i18n:translate="">on <tal:var content="python:formatter.getFormatter('date','long').format(date)" i18n:name="date" /> - <tal:var content="python:formatter.getFormatter('time','short').format(date)" i18n:name="time" /></span>
			</div>
			<tal:var replace="structure context/@@comments" />
		</div>
	</div>
</tal:var>