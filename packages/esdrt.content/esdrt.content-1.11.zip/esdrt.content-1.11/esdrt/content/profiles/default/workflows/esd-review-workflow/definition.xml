 </state>
 <state state_id="closed" title="Closed">
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Reply to item" acquired="False">
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Conclusion" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add Question" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="conclusion-discussion" title="Conclusion discussion">
  <exit-transition transition_id="finish-comments"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Conclusion" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add Question" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: View Answer Discussion" acquired="True">
  </permission-map>
  <permission-map name="esdrt.content: View Comment Discussion" acquired="True">
  </permission-map>
  <permission-map name="esdrt.content: View Conclusion Discussion" acquired="True">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="conclusions" title="Conclusions">
  <exit-transition transition_id="request-comments"/>
  <exit-transition transition_id="reopen"/>
  <exit-transition transition_id="request-close"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>ExpertReviewer</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>ExpertReviewer</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>ExpertReviewer</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Conclusion" acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Question" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: View Answer Discussion" acquired="True">
  </permission-map>
  <permission-map name="esdrt.content: View Comment Discussion" acquired="True">
  </permission-map>
  <permission-map name="esdrt.content: View Conclusion Discussion" acquired="True">
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="draft" title="Draft">
  <exit-transition transition_id="request-close"/>
  <exit-transition transition_id="approve"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Conclusion" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add Question" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: View Answer Discussion" acquired="True">
  </permission-map>
  <permission-map name="esdrt.content: View Comment Discussion" acquired="True">
  </permission-map>
  <permission-map name="esdrt.content: View Conclusion Discussion" acquired="True">
  </permission-map>
 </state>
 <state state_id="pending" title="Pending question">
  <exit-transition transition_id="request-close"/>
  <exit-transition transition_id="draft-conclusions"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Conclusion" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add Question" acquired="False">
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: View Answer Discussion" acquired="False">
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: View Comment Discussion" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: View Conclusion Discussion" acquired="True">
  </permission-map>
 </state>
 <state state_id="pending-question-2" title="Pending Question Phase 2">
  <exit-transition transition_id="draft-conclusions"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Conclusion" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add Question" acquired="False">
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: View Answer Discussion" acquired="False">
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: View Comment Discussion" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: View Conclusion Discussion" acquired="True">
  </permission-map>
 </state>
 <transition transition_id="approve" title="Open" new_state="pending" trigger="USER" before_script="" after_script="">
  
  <guard>
   <guard-role>Manager</guard-role>
   <guard-role>SectorExpertReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="close" title="Confirm finishing observation" new_state="closed" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=close" category="workflow" icon="">Confirm finishing observation</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="deny-closure" title="Deny finishing observation" new_state="conclusions" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/deny-finish-observation?workflow_action=deny-closure" category="workflow" icon="">Deny finishing observation</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="draft-conclusions" title="Draft conclusions" new_state="conclusions" trigger="USER" before_script="" after_script="">
  
  <guard>
   <guard-role>Owner</guard-role>
   <guard-role>SectorExpertReviewer</guard-role>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="finish-comments" title="Finish Comments" new_state="conclusions" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=finish-comments" category="workflow" icon="">Finish Comments</action>
  <guard>
   <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="reopen" title="Reopen Q&amp;A Chat" new_state="pending" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=reopen" category="workflow" icon="">Reopen Q&amp;A Chat</action>
  <guard>
   <guard-role>SectorExpertReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="request-close" title="Finish Observation" new_state="close-requested" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/request-finish-observation?workflow_action=request-close" category="workflow" icon="">Finish Observation</action>
  <guard>
   <guard-role>Owner</guard-role>
  </guard>
 </transition>
 <transition transition_id="request-comments" title="Request Comments" new_state="conclusion-discussion" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/assign_conclusion_reviewer_form?workflow_action=request-comments" category="workflow" icon="">Request Comments</action>
  <guard>
   <guard-role>Owner</guard-role>
   <guard-role>SectorExpertReviewer</guard-role>
   <guard-expression>here/@@view/get_conclusion</guard-expression>
  </guard>
 </transition>
 <transition transition_id="send-to-team-2" title="Hand over to Team 2" new_state="pending-question-2" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=send-to-team-2" category="workflow" icon="">Hand over to Team 2</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Reviewer tasks</description>
  <action url="%(portal_url)s/search?review_state=pending" category="global" icon="">Pending (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the previous transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
