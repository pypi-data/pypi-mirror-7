<?xml version="1.0"?>
<dc-workflow workflow_id="esd-question-review-workflow" title="ESD Question Review Workflow" description="" state_variable="review_state" initial_state="draft" manager_bypass="True">
 <instance-creation-conditions>
   <guard>
    <guard-permission>esdrt.content: Add Question</guard-permission>
   </guard>
 </instance-creation-conditions>
 <permission>Access contents information</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>
 <permission>esdrt.content: Add Comment</permission>
 <permission>esdrt.content: Add CommentAnswer</permission>
 <permission>esdrt.content: Add ESDRTFile</permission>
 <state state_id="answered" title="Answered">
  <exit-transition transition_id="validate-answer-msa"/>
  <exit-transition transition_id="ask-validation"/>
  <exit-transition transition_id="recall-msa"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
  </permission-map>
 </state>
 <state state_id="closed" title="Closed">
  <exit-transition transition_id="reopen"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
  </permission-map>
 </state>
 <state state_id="counterpart-comments" title="Counterpart comments">
  <exit-transition transition_id="send-comments"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
  </permission-map>
 </state>
 <state state_id="draft" title="Draft">
  <exit-transition transition_id="close"/>
  <exit-transition transition_id="close-lr"/>
  <exit-transition transition_id="request-for-counterpart-comments"/>
  <exit-transition transition_id="send-to-lr"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="drafted" title="Drafted">
  <exit-transition transition_id="approve-question"/>
  <exit-transition transition_id="close-lr"/>
  <exit-transition transition_id="redraft"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>CounterPart</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
   <permission-role>LeadReviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="pending" title="Pending">
  <exit-transition transition_id="answer-to-lr"/>
  <exit-transition transition_id="recall-question-lr"/>
  <exit-transition transition_id="assign-answerer"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
   <permission-role>MSAuthority</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
   <permission-role>MSAuthority</permission-role>
  </permission-map>
 </state>
 <state state_id="pending-answer" title="Pending Answer">
  <exit-transition transition_id="ask-answer-approval"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="pending-answer-validation" title="Pending Answer Validation">
  <exit-transition transition_id="answer"/>
  <exit-transition transition_id="redraft-msa"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
  </permission-map>
 </state>
 <state state_id="recalled-lr" title="Recalled (LR)">
  <exit-transition transition_id="approve-question"/>
  <exit-transition transition_id="close-lr"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
  </permission-map>
 </state>
 <state state_id="recalled-msa" title="Recalled (MSA)">
  <exit-transition transition_id="answer"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>SectorExpertReviewer</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
  </permission-map>
 </state>
 <state state_id="validate-answer" title="Validate Answer">
  <exit-transition transition_id="validate-answer"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>ExpertReviewer</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>ExpertReviewer</permission-role>
   <permission-role>LeadReviewer</permission-role>
   <permission-role>MSAuthority</permission-role>
   <permission-role>MSExpert</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="esdrt.content: Add Comment" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add CommentAnswer" acquired="False">
  </permission-map>
  <permission-map name="esdrt.content: Add ESDRTFile" acquired="False">
  </permission-map>
 </state>
 <transition transition_id="answer" title="Send Answer to LR" new_state="answered" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=answer" category="workflow" icon="">Send Answer to LR</action>
  <guard>
   <guard-role>MSAuthority</guard-role>
  </guard>
 </transition>
 <transition transition_id="answer-to-lr" title="Answer to LR" new_state="answered" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=answer-to-lr" category="workflow" icon="">Answer to LR</action>
  <guard>
   <guard-role>MSAuthority</guard-role>
   <guard-expression>object/one_pending_answer</guard-expression>
  </guard>
 </transition>
 <transition transition_id="approve-question" title="Send to MS" new_state="pending" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=approve-question" category="workflow" icon="">Send to MS</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="ask-answer-approval" title="Forward Answer to MSA" new_state="pending-answer-validation" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=ask-answer-approval" category="workflow" icon="">Forward Answer to MSA</action>
  <guard>
   <guard-role>MSExpert</guard-role>
   <guard-expression>object/has_answers</guard-expression>
  </guard>
 </transition>
 <transition transition_id="ask-validation" title="Forward Answer to SE" new_state="validate-answer" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=ask-validation" category="workflow" icon="">Forward Answer to SE</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="assign-answerer" title="Forward to MSE" new_state="pending-answer" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=assign-answerer" category="workflow" icon="">Forward to MSE</action>
  <guard>
   <guard-role>MSAuthority</guard-role>
   <guard-expression>not:object/one_pending_answer</guard-expression>
  </guard>
 </transition>
 <transition transition_id="close" title="Close Question" new_state="closed" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=close" category="workflow" icon="">Close</action>
  <guard>
   <guard-role>SectorExpertReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="close-lr" title="Close Question (LR)" new_state="closed" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=close-lr" category="workflow" icon="">Close (LR)</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="recall-msa" title="Recall Answer (MSA)" new_state="recalled-msa" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=recall-msa" category="workflow" icon="">Recall</action>
  <guard>
   <guard-role>MSAuthority</guard-role>
  </guard>
 </transition>
 <transition transition_id="recall-question-lr" title="Recall Question (LR)" new_state="recalled-lr" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=recall-question-lr" category="workflow" icon="">Recall Question (LR)</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="redraft" title="Ask SE to redraft" new_state="draft" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=redraft" category="workflow" icon="">Ask SE to redraft</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="redraft-msa" title="Ask to redraft to MSE" new_state="pending-answer" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=redraft-msa" category="workflow" icon="">Ask to redraft to MSE</action>
  <guard>
   <guard-role>MSAuthority</guard-role>
  </guard>
 </transition>
 <transition transition_id="reopen" title="Reopen" new_state="draft" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=reopen" category="workflow" icon="">Reopen</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="request-for-counterpart-comments" title="Request for Counterpart Comments" new_state="counterpart-comments" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/assign_counterpart_form?workflow_action=request-for-counterpart-comments" category="workflow" icon="">Request for Counterpart Comments</action>
  <guard>
   <guard-role>SectorExpertReviewer</guard-role>
   <guard-expression>python:object.unanswered_questions() and not object.already_commented_by_counterpart()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="send-comments" title="Send comments to LR" new_state="drafted" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/send_counterpart_comments?workflow_action=send-comments" category="workflow" icon="">Send comments to LR</action>
  <guard>
   <guard-role>CounterPart</guard-role>
  </guard>
 </transition>
 <transition transition_id="send-to-lr" title="Send to LR" new_state="drafted" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=send-to-lr" category="workflow" icon="">Send to LR</action>
  <guard>
   <guard-role>SectorExpertReviewer</guard-role>
   <guard-expression>python:object.unanswered_questions() and object.already_commented_by_counterpart()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="validate-answer" title="Validate Answer" new_state="closed" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=validate-answer" category="workflow" icon="">Validate Answer</action>
  <guard>
   <guard-role>SectorExpertReviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="validate-answer-msa" title="Validate Answer (LR)" new_state="closed" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=validate-answer-msa" category="workflow" icon="">Validate Answer (LR)</action>
  <guard>
   <guard-role>LeadReviewer</guard-role>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the previous transition</description>
  <default>
   
   <expression>user/getUserName</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
