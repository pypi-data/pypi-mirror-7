<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      tal:omit-tag="">

  <dl tal:attributes="class string:portlet portletMailChimp ${view/custom_css}">
    <dt class="portletHeader">
      <span tal:content="view/name">Title of the portlet</span>
    </dt>
    <dd class="portletItem odd">
    <p tal:replace="structure view/text"></p>
    <tal:form content="structure view/form/render"></tal:form>
    </dd>
  </dl>

</html>
