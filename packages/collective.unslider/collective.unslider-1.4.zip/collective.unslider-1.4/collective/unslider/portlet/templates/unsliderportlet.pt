<div class="portlet portletUnsliderPortlet"
    tal:attributes="style view/style"
    i18n:domain="collective.unslider">
    <div class="unslider-portlet unslider">
        <ul>
            <tal:r repeat="item view/contents">
                <li class="unslider-slide">
                    <a tal:attributes="style item/slide_css;
                        href item/url;">
                        <div class="unslider-slide-content">
                            <h1 style="display:inline" tal:content="item/title"></h1>
                            <p tal:content="item/description"></p>
                        </div>
                    </a>
                </li>
            </tal:r>
        </ul>
    </div>
</div>
