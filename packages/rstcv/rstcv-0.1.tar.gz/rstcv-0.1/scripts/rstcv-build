import os
import subprocess
import sys

if len(sys.argv) == 2:
    if os.path.isfile(sys.argv[1]):
        fn = sys.argv[1]
        print subprocess.check_output(['rst2pdf', fn])
        pdf_fn = os.path.splitext(fn)[0] + '.pdf'
        print "Rendered to {0}".format(pdf_fn)
        sys.exit(0)
    else:
        print "Please provide path to .rst file to render it"
else:
     print "Usage: {0} path_to_rst".format(sys.argv[0])

sys.exit(1)
