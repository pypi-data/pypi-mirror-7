<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ityou.imessage">
<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main"
                      tal:define="templateId template/getId;
                                  is_mobile python:False;
                                  receiver_id request/sid | nothing;
                                  portal_url view/portal_url;
                                  ">
 		<h1 class="documentFirstHeading breadcrumb" i18n:translate="instant_message_list">Instant Messages</h1>

	    <div id="imessage-inbox" class="clearfix">

            <div class="row">

                    <div id="dialog-header">
                        <!-- neue nachricht -->
                        <div class="new-message clearfix">
                            <a tal:attributes="href string:${context/absolute_url}/@@messages" class="btn btn-default pull-right"><i class="fa fa-edit"/> <span i18n:translate="write_new_message">write new message</span></a>
                        </div>
                        <!-- /neue nachricht -->
                    </div>
                    
                    <!-- dialogliste -->
                    <div id="dialog-overview-messages-list"></div>
                    <!-- /dialogliste -->


                    <!-- neue nachricht -->
                    <div class="new-message clearfix" tal:condition="nothing">
                        <a tal:attributes="href string:${context/absolute_url}/@@messages" class="btn btn-default pull-right"><i class="fa fa-edit"/> <span i18n:translate="write_new_message">write new message</span></a>
                    </div>
                    <!-- /neue nachricht -->

            </div>

        </div>
        
        <tal:comment condition="nothing">
        # ------------------------------------------------------------------------------
        #
        # DOKUMENTATION !
        #
        # neues dialog Ã¼bersichs template kommt hier her
        # #LM wie heisst die ajax-funktion die aufgerufen wird?
        #
        # ------------------------------------------------------------------------------
        </tal:comment>
        <script id="dialog-overview-tmpl" type="text/x-jsrender">
        <div class="{{if group == true}}group{{else}}user{{/if}} {{if unread > 0}}unread{{/if}} clearfix" data-hash="{{:hash}}" data-timestamp="{{:ploneTimeStamp}}" data-url="{{:siteUrl}}/@@messages?{{if group == true}}rid{{else}}sid{{/if}}={{:sender_id}}" data-dialog="{{:sender_id}}">
            <div class="action-buttons text-right">
                {{if unread > 0}}<span class="badge">{{:unread}}</span>{{/if}}
            </div>
            
            <div data-uid="{{:sender_id}}" class="user-information">
                {{if group == true}}
                    <div class="user-portrait">
                        <img src="/++resource++ityou.esi.theme.img/group_icon.png" class="img-thumbnail sender-portrait" alt="{{:sender_name}}" />
                    </div>
                {{else}}
                    <a href="{{:site_url}}/author/{{:sender_id}}" class="user-portrait" data-uid="{{:sender_id}}">
                        <img src="{{:sender_portrait}}" class="img-thumbnail sender-portrait" alt="{{:sender_name}}" />
                    </a>
                {{/if}}
                
                <div>
                    <span class="user-name">{{:sender_name}}</span>
                    <span class="message-text">
                        <small class="text-muted"><i class="fa {{if lastFromMe == true}}fa-check{{else}}fa-caret-right{{/if}}"></i></small>
                        <a href="{{:site_url}}/@@messages?{{if group != true}}sid={{else}}rid={{/if}}{{:sender_id}}">
                            {{:msg}}
                        </a>
                    </span>
                </div>
            </div>

            <span data-unix="{{:timeStamp}}" class="message-date">
                {{:timestr}}
            </span>
        </div> 
        </script>
        
        <tal:comment condition="nothing">
        # ------------------------------------------------------------------------------
        #
        # DOKUMENTATION !
        #
        # ------------------------------------------------------------------------------
        </tal:comment> 
        <script id="test-tmpl" type="text/x-jsrender">
        <div style="width: 100%; border-top: 1px solid black; padding-top: 5px;" class="clearfix">
            <span style="margin: 0 6px 0 4px; vertical-align: middle; display: inline-block; width: 100px; text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
                {{if group != true}}
                                <a href="{{:site_url}}/author/{{:sender_id}}" class="user-portrait" data-uid="{{:sender_id}}">
                                    <img src="{{:sender_portrait}}" class="img-thumbnail sender-portrait" alt="{{:sender_name}}">
                                </a>
                            {{else}}<!-- #LM TODO -- #MR auch in theme.html -->
                                <div class="user-portrait">
                                    <img src="/++resource++ityou.esi.theme.img/group_icon.png" class="img-thumbnail sender-portrait" alt="{{:sender_name}}">
                                </div>
                            {{/if}}
                {{:sender_name}}
            </span>
        <span style="float:right;width:60px;text-overflow:ellipsis;overflow: hidden;white-space:nowrap;" data-unix="{{:timeStamp}}">{{:timestr}}</span>
        <span style="display: inline-block;position:relative;margin-left: 30px;max-width:calc(100% - 300px);white-space:nowrap;">
            <span style="display: inline-block; width: auto; max-width: 100%;text-overflow:ellipsis;overflow:hidden;white-space:nowrap;">{{:msg}}</span>
        </span> 
        </div>
        </script>
        
        <tal:comment condition="nothing">
        # ------------------------------------------------------------------------------
        #
        # DOKUMENTATION !
        #
        # ------------------------------------------------------------------------------
        </tal:comment> 
        <script id="inbox-tmpl" type="text/x-jsrender">
            <tr class="{{if group == true}}group{{else}}user{{/if}} {{if approved == false}}unread{{/if}}" data-hash="{{:hash}}" data-timestamp="{{:ploneTimeStamp}}" data-url="{{:siteUrl}}/@@messages?{{if group == true}}rid{{else}}sid{{/if}}={{:sender_id}}">
                <!--<td class="checkbox-cell hidden-xs hidden-sm"><input type="checkbox" name="selectedMessages[]"></td>-->
                <td data-label="Sender" data-uid="{{:sender_id}}" class="user-information">
                    {{if group != true}}
                        <a href="{{:site_url}}/author/{{:sender_id}}" class="user-portrait" data-uid="{{:sender_id}}">
                            <img src="{{:sender_portrait}}" class="img-thumbnail sender-portrait" alt="{{:sender_name}}">
                        </a>
                    {{else}}<!-- #LM TODO -- #MR auch in theme.html -->
                        <div class="user-portrait">
                            <img src="/++resource++ityou.esi.theme.img/group_icon.png" class="img-thumbnail sender-portrait" alt="{{:sender_name}}">
                        </div>
                    {{/if}}
                    <span>{{:sender_name}}</span>
                </td>

                <td data-label="Nachricht" class="message-text">
                    <a href="{{:site_url}}/@@messages?{{if group != true}}sid={{else}}rid={{/if}}{{:sender_id}}">
                        {{:msg}}
                    </a>
                </td>

                <td data-label="Datum" data-unix="{{:timeStamp}}" class="message-date">
                    <a href="{{:site_url}}/@@messages?{{if group != true}}sid={{else}}rid={{/if}}{{:sender_id}}">
                        {{:timestr}}
                    </a>
                </td>

                <td class="action-buttons text-right">
                    <div class="btn-group">
                        {{if approved == false}}
                        <button type="button" class="btn btn-default" data-action="markAsRead" title="mark as read" i18n:attributes="title">
                            <i class="fa fa-eye"></i>
                        </button>
                        {{/if}}
                        <button type="button" class="btn btn-default" data-action="delete" title="delete" i18n:attributes="title">
                            <i class="fa fa-trash-o"></i>
                        </button>
                    </div>
                </td>

            </tr>
        </script>
        
        <tal:comment condition="nothing">
        # ------------------------------------------------------------------------------
        #
        # DOKUMENTATION !
        #
        # ------------------------------------------------------------------------------
        </tal:comment>         
        <script id="inbox-filter-nomatch-tmpl" type="text/x-jsrender">
            <tr>
                <td colspan="5" class="text-center">
                    <i class="fa fa-lightbulb-o"></i> <em i18n:translate="inbox_filter_nomatch">No match found ...</em>
                </td>
            </tr>
        </script>

    </metal:main-macro>
    </div>
</body>
</html>
